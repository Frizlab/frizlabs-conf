/* Zed settings
 *
 * For information on how to configure Zed, see the Zed documentation: <https://zed.dev/docs/configuring-zed>.
 *
 * To see all of Zed's default settings without changing your custom settings,
 *  run `zed: open default settings` from the command palette (cmd-shift-p). */
{
	"git": {
		"inline_blame": {
			"enabled": false
		}
	},
	"hover_popover_enabled": false,
	"hover_popover_delay": 750,
	"jsx_tag_auto_close": {
		"enabled": false
	},
	"use_auto_surround": false,
	"use_autoclose": false,
	"use_system_window_tabs": true,
	"whitespace_map": {
		"space": "✦",
		"tab": "⟶"
	},
	"preview_tabs": {
		"enabled": false
	},
	"show_whitespaces": "all",
	"disable_ai": true,
	"buffer_font_family": "Monaco",
	"ui_font_family": ".SystemUIFont",
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"base_keymap": "SublimeText",
	"ui_font_size": 15,
	"buffer_font_size": 13,
	"theme": {
		"mode": "system",
		"light": "One Light",
		"dark": "One Dark"
	},
	"format_on_save": "off",
	"tab_size": 3,
	"hard_tabs": true,
	"remove_trailing_whitespace_on_save": false
}
